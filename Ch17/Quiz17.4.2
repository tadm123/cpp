/* 
Define a struct named Item that contains two members: std::string_view name and int gold. 
Define a std::array and initialize it with 4 Item objects, explicitly specifying the element type for each initializer.
*/

#include <array>
#include <iostream>
#include <string_view>

struct Item
{
    std::string_view name{};
    int gold{};
};
int main()
{
    constexpr std::array<Item, 4> items{        //not explicitly defining the element Type
    {
        {"sword", 5},
        {"dagger", 3},
        {"club", 2},
        {"spear", 7}
    }};

    for (const auto& i: items)
    {
        std::cout<< "A " << i.name << " costs " << i.gold << " gold." << '\n';
    }

    return 0;
}

#include <iostream>
#include <vector>

template <typename T>
void printElement(const std::vector<T>& v, const int e)
{
    int length{ static_cast<int>(std::size(v)) };

    if ( (length < (e+1)) || (e < 0) ) //vector length 5,  max elements  e=4 + 1
        std::cout << "Invalid index" << '\n';
    else
        std::cout << "Element has a value: " << v[e] << '\n';
}

int main()
{
    std::vector v1 { 0, 1, 2, 3, 4 };
    printElement(v1, 2);
    printElement(v1, 5);

    std::vector v2 { 1.1, 2.2, 3.3 };
    printElement(v2, 0);
    printElement(v2, -1);

    return 0;
}

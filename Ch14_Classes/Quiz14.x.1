/*
Write a class named Point2d. Point2d should contain two member variables of type double: m_x, and m_y, both defaulted to 0.0.
https://www.learncpp.com/cpp-tutorial/chapter-14-summary-and-quiz/
*/

#include <iostream>

class Point2d
{
private:
    double m_x{0.0};
    double m_y{0.0};

public:
    Point2d() = default;            // prefer this method of setting to default instead of empty brackets

    Point2d(double x, double y)     // initializes m_x and m_y to the x,y that it's passed in
        : m_x { x }, m_y { y }
    {
    }

    double getX() const { return m_x; }
    double getY() const { return m_y; }

    void print() // has a Foo parameter
    {
        std::cout << "Point2d(" << getX() << ", " << getY() << ")" << "\n";    //this can be reduced to simply m_x and m_y 
    }

};

int main()
{
    Point2d first{};
    Point2d second{ 3.0, 4.0 };

    // Point2d third{ 4.0 }; // should error if uncommented

    first.print();
    second.print();

    return 0;
}

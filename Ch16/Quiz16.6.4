/* Write a function template to find the largest value in an std::vector. 
If the vector is empty, return the default value for the element type.
https://www.learncpp.com/cpp-tutorial/arrays-and-loops/
*/

#include <iostream>
#include <vector>

template <typename T>
T findMax(const std::vector<T>& arr)
{
    std::size_t length{arr.size()};

    if (length == 0)
        return 0;

    T max{arr[0]};   //setting the max to the first element

    for (std::size_t index{ 0 }; index < length; ++index)
        if (arr[index] > max)  //if element greater than max, update max
            max = arr[index];

    return max;
}

int main()
{
    std::vector data1 { 84, 92, 76, 81, 56 };
    std::cout << findMax(data1) << '\n';

    std::vector data2 { -13.0, -26.7, -105.5, -14.8 };
    std::cout << findMax(data2) << '\n';

    std::vector<int> data3 { };
    std::cout << findMax(data3) << '\n';

    return 0;
}

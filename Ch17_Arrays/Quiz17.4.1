#include <array>
#include <iostream>
#include <string_view>

struct Item
{
    std::string_view name{};
    int gold{};
};
int main()
{
    constexpr std::array items{              //explicitly defining the element's type
                  Item{"sword", 5},
                  Item{"dagger", 3},
                  Item{"club", 2},
                  Item{"spear", 7}
    };

    for (const auto& i: items)
    {
        std::cout<< "A " << i.name << " costs " << i.gold << " gold." << '\n';
    }

    return 0;
}

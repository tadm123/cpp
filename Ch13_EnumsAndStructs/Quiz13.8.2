#include <iostream>

struct Fraction            //defining Fraction struct
{
    int num {0};
    int den {0};
};

Fraction getFraction()       // populates Fraction object and returns it
{
    Fraction f{};

    std::cout << "Enter a value for numerator: ";   /// ex: f.num = 3
    std::cin >> f.num;

    std::cout << "Enter a value for denominator: "; //ex: f.den = 10
    std::cin >> f.den;

    return f;
}

Fraction multiplyFraction(const Fraction& f1, const Fraction& f2)
{
    return {f1.num * f2.num, f1.den * f2.den};
}

void printFraction(const Fraction& f)
{
    std::cout << "Your fractions multiplied together: " << f.num << "/" <<f.den << '\n';
}

int main()
{
    Fraction myFrac1{getFraction()};      //initializing myFrac1 with values that you inputted
    Fraction myFrac2{getFraction()};

    printFraction( multiplyFraction(myFrac1, myFrac2) );

    return 0;
}
